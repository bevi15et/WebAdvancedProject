<div class="container">
    <div class="tile is-parent">
        <article class="tile is-child box">
            <div class="box"><p>{{error}}</p></div>
            <form action="/products/updateProduct?productId={{id}}" method="POST">
                <div class="field">
                    Title: <br><br><p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" value="{{product.productName}}" name="ProductName">
                    </p>
                </div>
                <div class="field">
                    Description: <br><br><p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" value="{{product.productDescription}}" name="productDescription">
                    </p>
                </div>
                <div class="field">
                    Price: <br><br><p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" value="{{product.price}}" name="productPrice" maxlength="10">
                    </p>
                </div>
                <input class="button is-info" type="submit" value="update product">
            </form>
            
        </article>
    </div>
</div>